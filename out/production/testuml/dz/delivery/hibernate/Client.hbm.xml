<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping >

    <class name="com.company.Client" table="client">

        <id name="id" type="int">
            <column name="id"/>
        </id>

        <property name="firstName">
            <column name="firstname"/>
        </property>

        <property name="lastName">
            <column name="lastname"/>
        </property>

        <property name="email">
            <column name="email"/>
        </property>

        <property name="password">
            <column name="password"/>
        </property>

        <property name="phoneNumber">
            <column name="phone_number"/>
        </property>

        <property name="profilePhotoPath">
            <column name="profile_photo_path"/>
        </property>

        <set name="rOrder" inverse="true" lazy="true" cascade="delete-orphan">
            <key>
                <column name="id_client" not-null="true"/>
            </key>
            <one-to-many class="com.company.Order"/>
        </set>

    </class>

</hibernate-mapping>


